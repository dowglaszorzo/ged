@model EstagioUFMT.Models.SaidaViewModel
<h2>Novo Aluno</h2>
<hr />

@using (Html.BeginForm("Create", "Aluno", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    
    @Html.AntiForgeryToken()
<div class="form-horizontal">


    <div class="form-group">
        @Html.LabelFor(m => m.Nome, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Nome,
                               new { @class = "form-control", @placeholder = "Nome do Aluno" })
            @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.dataNasc, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.dataNasc,
                               new { @class = "form-control", @placeholder = "00/00/0000" })
            @Html.ValidationMessageFor(m => m.dataNasc, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        @Html.LabelFor(m => m.codEnsino, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.codEnsino,
                               new SelectList(ViewBag.Ensinos, "codEnsino", "tipo_de_ensino"),
                               "Escolha a categoria", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.codEnsino, "", new { @class = "text-danger" })
        </div>
    </div>




    <div class="form-group">
        @Html.LabelFor(m => m.ano, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ano,
                               new { @class = "form-control", @placeholder = "Ultimo ano cursado" })
            @Html.ValidationMessageFor(m => m.ano, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.serie, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.serie,
                               new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.serie, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.codSituacao, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.codSituacao,
                               new SelectList(ViewBag.Situacao, "codSituacao", "situacao"),
                               "Escolha a categoria", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.codEnsino, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.local, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.local,
                               new { @class = "form-control"})
            @Html.ValidationMessageFor(m => m.local, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NomeMae, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.NomeMae,
                               new { @class = "form-control"})
            @Html.ValidationMessageFor(m => m.NomeMae, "", new { @class = "text-danger" })
        </div>
    </div>

</div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Salvar Aluno" class="btn btn-primary" />
            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-danger" })
        </div>
    </div>

}
<div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

